<Page x:Class="EasyHttp.View.ImagePages.LookImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasyHttp.View.ImagePages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LookImagePage">

    <Grid>
        <Image Source="{Binding ImageSource}" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.6" Stretch="UniformToFill"/>
        <Image Source="{Binding ImageSource}" Margin="10"/>
    </Grid>
</Page>
